        <helpers:BoolConverter x:Key="CustomBoolConverter" />
        <helpers:ImageConverter x:Key="CustomImageConverter" />
        <helpers:GlobalMuteConverter x:Key="CustomGlobalMuteConverter" />
        <helpers:VolumeConverter x:Key="CustomVolumeConverter" />
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem
            IconImageSource="{Binding Source={StaticResource GlobalMuteKey}, Path=GlobalMuteImage, Mode=TwoWay}"
            Command="{Binding GlobalMute.OnClickedCommand}"/>
        <ToolbarItem
            IconImageSource="icon" 
            Clicked="OpenAbout"/>
        <ToolbarItem
            IconImageSource="settings"
            Clicked="OpenSettings"/>
    </ContentPage.ToolbarItems>
